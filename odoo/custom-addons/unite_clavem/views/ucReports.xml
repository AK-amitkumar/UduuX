<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report id="report_clavem_action" string="Clavem" model="unite.clavem" report_type="qweb-pdf"
                name="unite_clavem.clavemReport"/>
        <template id="report_todo_task_doc">
            <t t-call="report.external_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-xs-12">
                            <h2>
                                <span t-field="o.descriptionAttr"/>
                            </h2>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-8">
                            By:
                            <span t-field="o.userNameAttr"/>
                        </div>
                        <div class="col-xs-4">
                            Deadline:
                            <span t-field="o.passwordAttr"/>
                        </div>
                    </div>
                    <!-- Table -->
                </div>
            </t>
        </template>
    </data>
</odoo>