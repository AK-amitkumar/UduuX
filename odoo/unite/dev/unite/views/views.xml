<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="unite.start">
      <field name="name">UNITE landing</field>
      <field name="model">unite.core</field>
      <field name="arch" type="xml">
        <form id="startView" class="startView">
            <t t-call="coreTemplate">
              <div id="startDiv">
                <input></input>
              </div>
            </t>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="unite.action_window">
      <field name="name">UNITE window</field>
      <field name="res_model">unite.core</field>
      <field name="view_mode">form</field>
    </record>


