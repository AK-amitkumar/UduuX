<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="todo_app.form">
      <field name="name">todoApp form</field>
      <field name="model">todo.task</field>
      <field name="arch" type="xml">

        <form class="myForm">
          <header>
            <button name="TestButton"
                    type="object"
                    string="Show List"
                    class="unite_btn0"
            />
          </header>
          <sheet>
            <group name="group_top">
              <group name="group_left">
                <field name="name"/>
                <field name="is_done"/>
                <field name="active"/>
              </group>
            <group name="group_right">
                <field name="write_uid" readonly="1"/>
                <field name="__last_update" readonly="1"/>
                <field name="create_uid" readonly="1"/>
                <field name="create_date" readonly="1"/>
            </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- list view -->
    <record model="ir.ui.view" id="todo_app.tree">
      <field name="name">todo tree</field>
      <field name="model">todo.task</field>
      <field name="arch" type="xml">
        <tree colors="gray:is_done==True">
          <field name="name"/>
          <field name="is_done"/>
          <field name="active"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="todo_app.action_window">
      <field name="name">todoApp window</field>
      <field name="res_model">todo.task</field>
      <field name="view_mode">form, tree</field>
    </record>


    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="todo_app.action_server">
      <field name="name">todoApp server</field>
      <field name="model_id" ref="model_todo_app_todo_app"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    -->

    <!-- Top menu item -->

    <menuitem name="todoApp" id="todo_app.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="todo_app.menu_1" parent="todo_app.menu_root"/>
    <menuitem name="Menu 2" id="todo_app.menu_2" parent="todo_app.menu_root"/>

    <!-- actions -->

    <menuitem name="List"
              id="todo_app.menuAction"
              parent="todo_app.menu_1"
              sequence="20"
              action="todo_app.action_window"/>
    <!--
    <menuitem name="Server to list" id="todo_app" parent="todo_app.menu_2"
              action="todo_app.action_server"/>
    -->
  </data>
</odoo>