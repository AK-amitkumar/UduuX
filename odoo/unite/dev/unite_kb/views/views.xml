<odoo>
  <data>

    <record model="ir.ui.view" id="unite_kb_list">
      <field name="name">unite_kb list</field>
      <field name="model">unite.kb</field>
      <field name="arch" type="xml">
        <tree>
          <field name="ArtTitle"/>
          <field name="Author"/>
          <field name="CreatedAt"/>
          <field name="Description"/>
          <field name="Version"/>
          <field name="Status"/>
          <field name="LastEditedBy"/>
          <field name="Problem"/>
          <field name="Symptoms"/>
          <field name="Solutions"/>
          <field name="Inform"/>
        </tree>
      </field>
    </record>

        <record model="ir.ui.view" id="unite_kb_form">
      <field name="name">unite_kb form</field>
      <field name="model">unite.kb</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <field name="Status" widget="statusbar"
    statusbar_visible="draft,sent,progress,invoiced,done"/>
          </header>
          <field name="ArtTitle"/>
          <field name="Author"/>
          <field name="CreatedAt"/>
          <field name="Description"/>
          <field name="Version"/>
          <field name="Status"/>
          <field name="LastEditedBy"/>
          <field name="Problem"/>
          <field name="Symptoms"/>
          <field name="Solutions"/>
          <field name="Inform"/>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="unite_kb_action_window">
      <field name="name">unite_kb window</field>
      <field name="res_model">unite.kb</field>
      <field name="view_mode">tree,form</field>
    </record>

